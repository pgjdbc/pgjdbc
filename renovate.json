{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": ["dependencies"],
  "schedule": ["every 3 weeks on Monday"],
  "packageRules": [
    {
      "matchPackagePrefixes": ["org.openjdk.jmh"],
      "groupName": "jmh"
    },
    {
      "matchPackagePrefixes": ["ch.qos.logback"],
      "groupName": "logback",
      "allowedVersions": "< 1.3.0"
    }
  ]
}
